<?xml version="1.0" encoding="UTF-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="1.0px"
    android:insetRight="1.0px" >

    <selector>
        <item android:state_pressed="true">
            <shape>
                <gradient
                    android:angle="270.0"
                    android:endColor="@color/transparent_ban3"
                    android:startColor="@color/transparent_ban3" />

                    <!-- android:radius="2.0dip" -->
                <corners
                    android:bottomLeftRadius="14.0dip"
                    android:bottomRightRadius="0.0dip"
                    android:topLeftRadius="0.0dip"
                    android:topRightRadius="0.0dip" />
                <stroke 
                    android:width="0dp" 
                    android:color="#eededede" />
            </shape>
        </item>
        <item>
            <shape>
                <gradient
                    android:angle="270.0"
                    android:endColor="@color/transparent"
                    android:startColor="@color/transparent" />

<!--                     android:radius="2.0dip" -->
                <corners
                    android:bottomLeftRadius="16.0dip"
                    android:bottomRightRadius="0.0dip"
                    android:topLeftRadius="0.0dip"
                    android:topRightRadius="0.0dip" />
                <stroke 
                    android:width="0dp" 
                    android:color="#eededede" />
            </shape>
        </item>
    </selector>

</inset>