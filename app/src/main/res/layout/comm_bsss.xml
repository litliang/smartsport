<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/adapter_bsss_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/aa_tim"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/adapter_bsss_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报名中"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:textSize="36px"
            android:paddingRight="30px"
            android:paddingLeft="30px"
            android:layout_gravity="right"
            android:layout_marginTop="40px"
            android:layout_marginRight="40px"
            android:textColor="@color/white"
            android:background="@drawable/shape_bg_button"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30px"
        android:paddingTop="10px">

        <TextView
            android:id="@+id/adapter_bsss_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="45px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="20px"
            android:text="比赛标题比赛标题比赛标题比赛标题比赛标题"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/adapter_bsss_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-05-20至2017-06-21"
                android:textSize="38px"
                android:textColor="@color/text_gray"
                android:layout_marginLeft="40px"
                android:layout_marginTop="10px"/>

            <TextView
                android:layout_marginLeft="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textColor="@color/text_gray"
                android:layout_marginTop="10px"/>

            <TextView
                android:id="@+id/adapter_bsss_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="38px"
                android:layout_marginLeft="20px"
                android:layout_marginTop="10px"
                android:text="上海体育馆"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top">
            <TextView
                android:id="@+id/adapter_bsss_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="U16"
                android:textSize="35px"
                android:layout_marginLeft="40px"
                android:layout_marginTop="40px"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:textColor="@color/theme_color"
                android:background="@drawable/guide_background"/>
            <TextView
                android:id="@+id/adapter_bsss_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11人"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:textSize="35px"
                android:layout_marginLeft="40px"
                android:layout_marginTop="40px"
                android:textColor="@color/theme_color"
                android:background="@drawable/guide_background"/>

            <RelativeLayout android:visibility="gone"
                android:id="@+id/adapter_bsss_rl_pay"
                android:layout_marginTop="30px"
                android:layout_marginBottom="30px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/adapter_bsss_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="35px"
                    android:layout_marginTop="10px"
                    android:text="￥199"
                    android:layout_marginRight="40px"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20px"/>


                <TextView
                    android:id="@+id/adapter_bsss_syu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还剩8个名额"
                    android:layout_toLeftOf="@+id/adapter_bsss_pay"
                    android:layout_marginTop="10px"
                    android:layout_marginRight="10px"
                    android:textColor="@color/text_gray"
                    android:textSize="30px" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>