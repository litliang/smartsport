<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="40px"
        android:layout_marginTop="40px"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/adapter_home_header"
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_marginLeft="50px"
            android:src="@mipmap/head_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:layout_toRightOf="@id/adapter_home_header"
            android:layout_alignTop="@id/adapter_home_header"
            android:layout_alignBottom="@id/adapter_home_header"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adapter_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="球队名字"
                android:textColor="@color/black"
                android:textSize="45px" />

            <TextView
                android:id="@+id/adapter_home_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="球队简介"
                android:textColor="@color/text_gray"
                android:layout_marginTop="5dp"
                android:textSize="38px" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/qd_player_other_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/adapter_home_header"
            android:layout_alignBottom="@id/adapter_home_header"
            android:orientation="vertical"
            android:layout_marginRight="50px"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="right"
                android:textSize="45px" />

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:layout_marginTop="5dp"
                android:textSize="35px" />


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>