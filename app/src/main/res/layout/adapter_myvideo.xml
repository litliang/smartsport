<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="324px"
            android:layout_height="324px"
            android:layout_margin="10dip"
            android:scaleType="fitXY"
            android:src="@mipmap/default_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:layout_marginTop="5dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="青训课程标题 青训课程标题 青训课程标题 "
                    android:textColor="@color/black"
                    android:textSize="16dip"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="2017-6-27"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=" | "
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12dip" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="上海虹口体育馆"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12dip" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dip">

                    <TextView
                        android:id="@+id/level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_bg_round_corner_green"
                        android:gravity="center_vertical"
                        android:padding="2dip"
                        android:text="U16"
                        android:textColor="@color/theme_color" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dip"
                        android:gravity="center_vertical"
                        android:text="￥1999/年"
                        android:textColor="@android:color/holo_red_dark" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/adapter_bszb_img"
                android:layout_width="match_parent"
                android:layout_height="491px"
                android:src="@mipmap/aa_ting"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:layout_marginLeft="20px"
                />
            <TextView
                android:id="@+id/adapter_bszb_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来源：花椒"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:textSize="36px"
                android:paddingRight="30px"
                android:paddingLeft="30px"
                android:layout_gravity="right"
                android:layout_marginTop="20px"
                android:layout_marginRight="40px"
                android:textColor="@color/white"/>

            <ImageView
                android:background="#3f000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="center"
                android:scaleType="centerInside"
                android:src="@mipmap/bq_start"/>
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/adapter_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="38px"
                android:layout_marginLeft="40px"
                android:layout_marginTop="20px"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""/>

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/pay_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="38px"
                android:layout_marginLeft="40px"
                android:layout_marginTop="20px"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""/>
            <TextView
                android:layout_toLeftOf="@+id/pay_status"
                android:layout_toRightOf="@+id/adapter_price"
                android:gravity="right"
                android:id="@+id/video_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38px"
                android:layout_marginLeft="40px"
                android:layout_marginTop="20px"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>

