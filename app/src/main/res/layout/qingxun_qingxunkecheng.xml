<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="324px"
            android:layout_height="324px"
            android:layout_margin="10dip"
            android:scaleType="fitXY"
            android:src="@mipmap/default_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:layout_marginTop="5dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="青训课程标题 青训课程标题 青训课程标题 "
                    android:textColor="@color/black"
                    android:textSize="16dip"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="2017-6-27"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=" | "
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12dip" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="上海虹口体育馆"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12dip" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dip">

                    <TextView
                        android:id="@+id/u16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_bg_round_corner_green"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/u_pading_top_bottom"
                        android:paddingLeft="@dimen/u_pading_left_right"
                        android:paddingRight="@dimen/u_pading_left_right"
                        android:paddingTop="@dimen/u_pading_top_bottom"
                        android:text="U16"
                        android:textColor="@color/theme_color" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dip"
                        android:gravity="center_vertical"
                        android:text="￥1999/年"
                        android:textColor="@android:color/holo_red_dark" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dip"
        android:background="@color/text_hint" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip">

        <RoundImageView
            android:id="@+id/coach_head"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:src="@mipmap/head_default" />

        <TextView
            android:id="@+id/coach_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/coach_head" />

        <TextView
            android:id="@+id/woyaobaoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/shape_bg_round_corner_green"
            android:paddingBottom="2dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:paddingTop="2dip"
            android:text="我要报名"
            android:textColor="@color/theme_color" />

        <TextView
            android:id="@+id/haishengjigeminge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/woyaobaoming" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dip"
        android:background="@color/line_color" />
</LinearLayout>