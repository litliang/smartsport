<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray">

    <RelativeLayout
        android:id="@+id/wd_title"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@color/theme_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wd_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:src="@mipmap/wd_set" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="@color/white"
            android:textSize="48px" />

        <ImageView
            android:id="@+id/wd_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:src="@mipmap/wd_msg" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/wd_bg">

        <RelativeLayout
            android:id="@+id/rl_account_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70px"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/wd_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:src="@mipmap/head_default" />

            <LinearLayout
                android:id="@+id/wd_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="50px"
                android:layout_toRightOf="@+id/wd_header"
                android:orientation="vertical">

                <TextView android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录/注册"
                    android:textColor="@color/white"
                    android:textSize="45px" />

                <TextView android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录可享受更多服务"
                    android:textColor="@color/white"
                    android:textSize="38px" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_account_set"
                android:layout_width="150px"
                android:layout_height="150px"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/left_arrow" />
            </LinearLayout>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132px"
            android:layout_below="@+id/rl_account_set"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="身高：--"
                android:textColor="@color/white"
                android:textSize="42px" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="体重：--"
                android:textColor="@color/white"
                android:textSize="42px" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="惯用脚：--"
                android:textColor="@color/white"
                android:textSize="42px" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="30px">

        <RelativeLayout
            android:id="@+id/rl_kc"
            android:layout_width="match_parent"
            android:layout_height="120px">

            <ImageView
                android:id="@+id/wd_kc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:src="@mipmap/wd_kc" />

            <TextView
                android:id="@+id/wd_text_kc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:layout_toRightOf="@+id/wd_kc"
                android:text="我的课程"
                android:textColor="@color/text_black"
                android:textSize="45px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="50px"
                android:src="@mipmap/left_arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/rl_kc"
            android:layout_marginLeft="152px"
            android:layout_toRightOf="@+id/wd_kc"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/rl_sc"
            android:layout_width="match_parent"
            android:layout_height="120px">

            <ImageView
                android:id="@+id/wd_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:src="@mipmap/wd_sc" />

            <TextView
                android:id="@+id/wd_text_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:layout_toRightOf="@+id/wd_sc"
                android:text="我的收藏"
                android:textColor="@color/text_black"
                android:textSize="45px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="50px"
                android:src="@mipmap/left_arrow" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/rl_sc"
            android:layout_marginLeft="152px"
            android:layout_toRightOf="@+id/wd_sc"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/rl_sp"
            android:layout_width="match_parent"
            android:layout_height="120px">

            <ImageView
                android:id="@+id/wd_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:src="@mipmap/wd_sp" />

            <TextView
                android:id="@+id/wd_text_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:layout_toRightOf="@+id/wd_sp"
                android:text="我的视频"
                android:textColor="@color/text_black"
                android:textSize="45px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="50px"
                android:src="@mipmap/left_arrow" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/rl_sp"
            android:layout_marginLeft="152px"
            android:layout_toRightOf="@+id/wd_sp"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/rl_qd"
            android:layout_width="match_parent"
            android:layout_height="120px">

            <ImageView
                android:id="@+id/wd_qd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:src="@mipmap/wd_qd" />

            <TextView
                android:id="@+id/wd_text_qd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:layout_toRightOf="@+id/wd_qd"
                android:text="我的球队"
                android:textColor="@color/text_black"
                android:textSize="45px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="50px"
                android:src="@mipmap/left_arrow" />


        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_yl"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/white"
        android:layout_marginTop="45px">

        <ImageView
            android:id="@+id/wd_yl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50px"
            android:src="@mipmap/wd_yl" />

        <TextView
            android:id="@+id/wd_text_yl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/wd_yl"
            android:text="娱乐"
            android:textColor="@color/text_black"
            android:textSize="45px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="50px"
            android:src="@mipmap/left_arrow" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="45px">

    <RelativeLayout
        android:id="@+id/rl_hy"
        android:layout_width="match_parent"
        android:layout_height="120px">

        <ImageView
            android:id="@+id/wd_hy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50px"
            android:src="@mipmap/wd_hy" />

        <TextView
            android:id="@+id/wd_text_hy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/wd_hy"
            android:text="我的会员"
            android:textColor="@color/text_black"
            android:textSize="45px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="50px"
            android:src="@mipmap/left_arrow" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/rl_hy"
        android:layout_marginLeft="152px"
        android:layout_toRightOf="@+id/wd_hy"
        android:background="@color/line_color" />
    <RelativeLayout
        android:id="@+id/rl_dd"
        android:layout_width="match_parent"
        android:layout_height="120px">

        <ImageView
            android:id="@+id/wd_dd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50px"
            android:src="@mipmap/wd_dd" />

        <TextView
            android:id="@+id/wd_text_dd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/wd_dd"
            android:text="我的订单"
            android:textColor="@color/text_black"
            android:textSize="45px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="50px"
            android:src="@mipmap/left_arrow" />


    </RelativeLayout>
    </LinearLayout>

</LinearLayout>