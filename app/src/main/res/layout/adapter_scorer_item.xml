<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">
    <TextView
        android:id="@+id/scorer_item_number_tv"
        style="@style/scoreboard_title_tv_style"
        android:layout_weight="0.8"
        android:textColor="@color/text_gray"
        android:textSize="14sp"
        android:text="1" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="left|center_vertical">
        <ImageView
            android:id="@+id/scorer_item_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/scorer_item_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="14sp"
            android:lines="1"
            android:ellipsize="end"
            android:text="球员名字" />
    </LinearLayout>
    <TextView
        android:id="@+id/scorer_item_name_tv"
        style="@style/scoreboard_title_tv_style"
        android:layout_weight="2"
        android:textColor="@color/text_gray"
        android:gravity="left|center_vertical"
        android:textSize="14sp"
        android:lines="1"
        android:ellipsize="end"
        android:text="球队名字" />
    <TextView
        android:id="@+id/scorer_item_score_tv"
        style="@style/scoreboard_title_tv_style"
        android:layout_weight="1"
        android:textColor="@color/text_gray"
        android:textSize="14sp"
        android:text="13" />
</LinearLayout>