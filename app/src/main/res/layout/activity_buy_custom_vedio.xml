                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/buy_no_iv"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/radio_uncheck"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="￥199"
                        android:textSize="@dimen/text_size_notice"
                        android:textColor="@color/red"
                        android:layout_toLeftOf="@id/buy_no_iv"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>
        </LinearLayout>

    </ScrollView>
    <Button
        android:id="@+id/buy_pay"
        android:layout_width="match_parent"
        android:layout_height="141px"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/pay_button"
        android:text="去支付"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        />
</RelativeLayout>