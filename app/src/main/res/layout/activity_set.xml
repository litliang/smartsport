<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/action_bar"
        android:layout_alignParentTop="true">
        <include layout="@layout/layout_actionbar" /></FrameLayout>

    <LinearLayout
        android:layout_marginTop="40px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

    <RelativeLayout
        android:id="@+id/set_rl_tsxx_set"
        android:layout_width="match_parent"
        android:layout_height="120px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            android:text="推送消息设置"
            android:textColor="@color/black"
            android:textSize="45px" />

        <TextView
            android:id="@+id/set_tsxx_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:layout_toLeftOf="@+id/set_left_arrow1"
            android:text="18"
            android:visibility="invisible"
            android:textColor="@color/text_gray"
            android:textSize="45px" />

        <ImageView
            android:id="@+id/set_left_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:src="@mipmap/left_arrow" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="60px"
        android:background="@color/line_color" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:text="夜间模式"
                android:textColor="@color/black"
                android:textSize="45px" />


            <com.zf.view.UISwitchButton
                android:id="@+id/set_left_arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60px" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="60px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout android:id="@+id/rate"
            android:layout_width="match_parent"
            android:layout_height="120px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:text="给软件打分"
                android:textColor="@color/black"
                android:textSize="45px" />

            <TextView
                android:id="@+id/set_grjdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:layout_toLeftOf="@+id/set_left_arrow3"
                android:text="18"
                android:visibility="invisible"
                android:textColor="@color/text_gray"
                android:textSize="45px" />

            <ImageView
                android:id="@+id/set_left_arrow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60px"
                android:src="@mipmap/left_arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="60px"
            android:background="@color/line_color" />

        <RelativeLayout android:id="@+id/hc"
            android:layout_width="match_parent"
            android:layout_height="120px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:text="帮助中心"
                android:textColor="@color/black"
                android:textSize="45px" />

            <TextView
                android:id="@+id/set_bzzx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:layout_toLeftOf="@+id/set_left_arrow4"
                android:text="18"
                android:visibility="invisible"
                android:textColor="@color/text_gray"
                android:textSize="45px" />

            <ImageView
                android:id="@+id/set_left_arrow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60px"
                android:src="@mipmap/left_arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="60px"
            android:background="@color/line_color" />
        <RelativeLayout
            android:id="@+id/rl_qctphc"
            android:layout_width="match_parent"
            android:layout_height="120px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:text="清除图片缓存"
                android:textColor="@color/black"
                android:textSize="45px" />

            <TextView
                android:id="@+id/set_qctphc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:layout_toLeftOf="@+id/set_left_arrow5"
                android:text="100M"
                android:textColor="@color/text_gray"
                android:textSize="45px" />

            <ImageView
                android:id="@+id/set_left_arrow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60px"
                android:src="@mipmap/left_arrow" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="60px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/set_rl_about"
            android:layout_width="match_parent"
            android:layout_height="120px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:text="关于"
                android:textColor="@color/black"
                android:textSize="45px" />

            <TextView
                android:id="@+id/set_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:layout_toLeftOf="@+id/set_left_arrow6"
                android:text="数苗足球V1.0"
                android:textColor="@color/text_gray"
                android:textSize="45px" />

            <ImageView
                android:id="@+id/set_left_arrow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60px"
                android:src="@mipmap/left_arrow" />

        </RelativeLayout>



    </LinearLayout>
</LinearLayout>