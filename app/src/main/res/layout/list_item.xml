<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FEFEFE"
    >

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="255px"
        android:layout_height="255px"
        android:layout_marginTop="@dimen/list_item_top"
        android:layout_marginLeft="@dimen/list_item_top"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_pic"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginRight="@dimen/margin_leftx2"
        android:layout_alignTop="@+id/iv_pic"
        android:layout_marginTop="20px"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="比赛活动标题，比赛活动标题，比赛活动标题，比赛活动标题，比赛活动标题，比赛活动标题，比赛活动标题，比赛活动标题，比赛活动标题"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_title"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_marginTop="@dimen/list_item_top"
        android:gravity="center_vertical"
        >
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-05-28"
        android:textSize="@dimen/text_size_notice" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="@dimen/text_size_notice"
        android:background="#e5e5e5"
        android:layout_toRightOf="@+id/tv_date"
        android:layout_marginLeft="@dimen/margin_left"
        />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:text="上海市虹口体育馆"
        android:textSize="@dimen/text_size_notice" />
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@mipmap/line_h"
        android:layout_below="@+id/iv_pic"
        android:layout_marginTop="@dimen/list_item_top"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_below="@+id/line"
        >
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:text="¥1999/年"
        android:textColor="#ff0000"
        android:textSize="@dimen/text_size_notice"
        android:layout_centerVertical="true"

        />
        <TextView
            android:id="@+id/pay_status"
            android:layout_width="240px"
            android:layout_height="@dimen/margin_leftx2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/list_item_top"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="@dimen/text_size_notice"
            android:padding="15px"
            />
    </RelativeLayout>
</RelativeLayout>