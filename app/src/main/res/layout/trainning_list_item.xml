<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_left"
    >

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="300px"
        android:layout_height="300px"
        app:layout_auto_baseheight="width"
        android:scaleType="fitXY"
        android:src="@mipmap/timg" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_pic"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_alignTop="@+id/iv_pic"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/font_main"
        android:text="比赛活动标题，比赛活动标题，比赛活动标题，比赛活动标题，比赛活动标题，比赛活动标题，比赛活动标题，比赛活动标题，比赛活动标题"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_title"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_marginTop="@dimen/margin_left"
        android:gravity="center_vertical"
        >
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-05-28"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/text_size_notice" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="@dimen/text_size_notice"
        android:background="@color/font_gray"
        android:layout_toRightOf="@+id/tv_date"
        android:layout_marginLeft="15px"
        />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:text="上海市虹口体育馆"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/text_size_notice" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_pic"
        android:layout_alignLeft="@+id/tv_title"
        >
        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="90px"
            android:layout_height="60px"
            android:textSize="@dimen/text_size_notice"
            android:gravity="center"
            android:background="@mipmap/icon_tag"
            android:textColor="@color/theme_green"
            android:text="U15"
            />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥1999/年"
        android:textColor="#ff0000"
        android:textSize="@dimen/text_size_notice"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
    </RelativeLayout>
</RelativeLayout>