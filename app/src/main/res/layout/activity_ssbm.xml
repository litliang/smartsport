<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/action_bar"
            android:layout_alignParentTop="true">
            <include layout="@layout/layout_actionbar" /></FrameLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ssbm_img_pic"
                            android:layout_width="200px"
                            android:layout_height="200px"
                            android:layout_marginLeft="40px"
                            android:layout_marginTop="20px"
                            android:src="@mipmap/ic_launcher" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="240px"
                            android:layout_marginLeft="40px"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/ssbm_text_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="比赛标题"
                                android:textColor="@color/black"
                                android:textSize="45px" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/ssbm_text_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2017-12-12"
                                    android:textColor="@color/text_gray"
                                    android:textSize="42px" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20px"
                                    android:layout_marginRight="20px"
                                    android:text="|"
                                    android:textColor="@color/text_gray"
                                    android:textSize="45px" />

                                <TextView
                                    android:id="@+id/ssbm_text_adress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="上海体育馆"
                                    android:textColor="@color/text_gray"
                                    android:textSize="42px" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/line_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120px"
                        android:layout_marginLeft="40px"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ssbm_text_sell_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥299"
                            android:textColor="@color/red_baoming"
                            android:textSize="56px" />

                        <TextView
                            android:id="@+id/ssbm_text_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20px"
                            android:text="￥1299"
                            android:textColor="@color/text_gray"
                            android:textSize="42px" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/buycustomvideo"
                        android:layout_width="match_parent"
                        android:layout_height="120px">

                        <TextView
                            android:id="@+id/ssbm_text_buy_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40px"
                            android:layout_toRightOf="@+id/wd_kc"
                            android:text="购买定制视频"
                            android:textColor="@color/text_black"
                            android:textSize="45px" />

                        <TextView
                            android:id="@+id/ssbm_text_sell_prices"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20px"
                            android:layout_toRightOf="@+id/ssbm_text_buy_video"
                            android:text="￥0"
                            android:textColor="@color/red_baoming"
                            android:textSize="45px" />

                        <TextView
                            android:id="@+id/ssbm_text_dingzhi_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20px"
                            android:layout_toLeftOf="@+id/img1"
                            android:text="定制视频A"
                            android:textColor="@color/text_gray"
                            android:textSize="45px" />

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="50px"
                            android:src="@mipmap/left_arrow" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/line_color" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120px">

                        <TextView
                            android:id="@+id/ssbm_text_buy_good"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40px"
                            android:layout_toRightOf="@+id/wd_kc"
                            android:text="商品总金额"
                            android:textColor="@color/text_black"
                            android:textSize="45px" />

                        <TextView
                            android:id="@+id/ssbm_text_prices"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40px"
                            android:text="￥1299"
                            android:textColor="@color/red_baoming"
                            android:textSize="45px" />


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/ssbm_rl_dui"
                        android:layout_width="match_parent"
                        android:layout_height="120px">

                        <TextView
                            android:id="@+id/ssbm_text_bao_diu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40px"
                            android:layout_toRightOf="@+id/wd_kc"
                            android:text="报名球队"
                            android:textColor="@color/text_black"
                            android:textSize="45px" />

                        <TextView
                            android:id="@+id/ssbm_text_baoming_qiudui"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20px"
                            android:layout_toLeftOf="@+id/img2"
                            android:text="青少年球队"
                            android:textColor="@color/text_gray"
                            android:textSize="45px" />

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="50px"
                            android:src="@mipmap/left_arrow" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/line_color" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120px">

                        <TextView
                            android:id="@+id/ssbm_text_san_yuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40px"
                            android:layout_toRightOf="@+id/wd_kc"
                            android:text="参赛队员"
                            android:textColor="@color/text_black"
                            android:textSize="45px" />

                        <TextView
                            android:id="@+id/ssbm_text_people_num"
                            android:layout_width="160px"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40px"
                            android:layout_toLeftOf="@+id/ssbm_text_num_people"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:hint="11"
                            android:textColor="@color/text_gray"
                            android:textSize="45px" />

                        <TextView
                            android:id="@+id/ssbm_text_num_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40px"
                            android:hint="人"
                            android:textColor="@color/text_gray"
                            android:textSize="45px" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/line_color" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120px">

                        <TextView
                            android:id="@+id/ssbm_text_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40px"
                            android:layout_toRightOf="@+id/wd_kc"
                            android:text="联系人"
                            android:textColor="@color/text_black"
                            android:textSize="45px" />

                        <EditText
                            android:id="@+id/ssbm_text_people_name"
                            android:layout_width="500px"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20px"
                            android:layout_toLeftOf="@+id/img3"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:hint="联系人姓名"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:singleLine="true"
                            android:textColor="@color/text_gray"
                            android:textSize="45px" />

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="50px"
                            android:src="@mipmap/icon_bi" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/line_color" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120px">

                        <TextView
                            android:id="@+id/ssbm_text_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40px"
                            android:layout_toRightOf="@+id/wd_kc"
                            android:text="联系电话"
                            android:textColor="@color/text_black"
                            android:textSize="45px" />

                        <EditText
                            android:id="@+id/ssbm_text_people_phone"
                            android:layout_width="500px"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20px"
                            android:layout_toLeftOf="@+id/img4"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:hint="请输入手机号"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:singleLine="true"
                            android:textColor="@color/text_gray"
                            android:textSize="45px" />

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="50px"
                            android:src="@mipmap/icon_bi" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/line_color" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120px"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ssbm_refund_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="退款说明"
                            android:textColor="@color/text_blue"
                            android:textSize="45px" />

                        <View
                            android:layout_width="2px"
                            android:layout_height="match_parent"
                            android:background="@color/line_color" />

                        <TextView
                            android:id="@+id/ssbm_disclaimer_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="免责声明"
                            android:textColor="@color/text_blue"
                            android:textSize="45px" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <TextView
        android:id="@+id/ssbm_pay"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:textSize="45px"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:background="@color/red_baoming"
        android:text="去支付"/>


</RelativeLayout>