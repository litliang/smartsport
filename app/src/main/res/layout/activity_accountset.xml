<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/action_bar"
        android:layout_alignParentTop="true">
        <include layout="@layout/layout_actionbar" /></FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/account_set_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/account_header"
                        android:layout_width="213px"
                        android:layout_height="213px"
                        android:layout_marginBottom="40px"
                        android:layout_marginLeft="50px"
                        android:layout_marginTop="40px"
                        android:src="@mipmap/account_set_header" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="50px"
                        android:layout_toRightOf="@+id/account_header"
                        android:text="更换头像"
                        android:textColor="@color/black"
                        android:textSize="45px" />

                    <LinearLayout
                        android:layout_width="150px"
                        android:layout_height="150px"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:gravity="center">

                        <ImageView android:id="@+id/head"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/left_arrow" />
                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60px"
                        android:text="用户名"
                        android:textColor="@color/black"
                        android:textSize="45px" />

                    <TextView android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@+id/account_left_arrow3"
                        android:text="Aaron"
                        android:textColor="@color/text_gray"
                        android:textSize="45px" />

                    <ImageView
                        android:id="@+id/account_left_arrow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="60px"
                        android:src="@mipmap/left_arrow"
                        android:visibility="invisible" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="60px"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60px"
                        android:text="真实姓名"
                        android:textColor="@color/black"
                        android:textSize="45px" />

                    <TextView android:id="@+id/truename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@+id/account_left_arrow2"
                        android:text="张三"
                        android:textColor="@color/text_gray"
                        android:textSize="45px" />

                    <ImageView
                        android:id="@+id/account_left_arrow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="60px"
                        android:src="@mipmap/left_arrow"
                        android:visibility="invisible" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="60px"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="60px"
                        android:text="年龄"
                        android:textColor="@color/black"
                        android:textSize="45px" />

                    <TextView
                        android:id="@+id/account_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@+id/account_left_arrow1"
                        android:text="18"
                        android:textColor="@color/text_gray"
                        android:textSize="45px" />

                    <ImageView
                        android:id="@+id/account_left_arrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="60px"
                        android:src="@mipmap/left_arrow" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="60px"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="60px"
                        android:text="性别"
                        android:textColor="@color/black"
                        android:textSize="45px" />

                    <TextView
                        android:id="@+id/account_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@+id/account_left_arrow4"
                        android:text="男"
                        android:textColor="@color/text_gray"
                        android:textSize="45px" />

                    <ImageView
                        android:id="@+id/account_left_arrow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="60px"
                        android:src="@mipmap/left_arrow" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="60px"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="60px"
                        android:text="身高"
                        android:textColor="@color/black"
                        android:textSize="45px" />

                    <TextView
                        android:id="@+id/account_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@+id/account_left_arrow5"
                        android:text="180cm"
                        android:textColor="@color/text_gray"
                        android:textSize="45px" />

                    <ImageView
                        android:id="@+id/account_left_arrow5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="60px"
                        android:src="@mipmap/left_arrow" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="60px"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="60px"
                        android:text="体重"
                        android:textColor="@color/black"
                        android:textSize="45px" />

                    <TextView
                        android:id="@+id/account_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@+id/account_left_arrow6"
                        android:text="180kg"
                        android:textColor="@color/text_gray"
                        android:textSize="45px" />

                    <ImageView
                        android:id="@+id/account_left_arrow6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="60px"
                        android:src="@mipmap/left_arrow" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="60px"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="60px"
                        android:text="惯用脚"
                        android:textColor="@color/black"
                        android:textSize="45px" />

                    <TextView
                        android:id="@+id/account_habit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@+id/account_left_arrow7"
                        android:text="右脚"
                        android:textColor="@color/text_gray"
                        android:textSize="45px" />

                    <ImageView
                        android:id="@+id/account_left_arrow7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="60px"
                        android:src="@mipmap/left_arrow" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="60px"
                        android:text="居住地"
                        android:textColor="@color/black"
                        android:textSize="45px" />

                    <TextView
                        android:id="@+id/account_jz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@+id/account_left_arrow8"
                        android:text="上海杨浦区"
                        android:textColor="@color/text_gray"
                        android:textSize="45px" />

                    <ImageView
                        android:id="@+id/account_left_arrow8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="60px"
                        android:src="@mipmap/left_arrow" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="60px"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="60px"
                        android:text="俱乐部"
                        android:textColor="@color/black"
                        android:textSize="45px" />

                    <TextView
                        android:id="@+id/account_jlb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@+id/account_left_arrow9"
                        android:text="青少年足球俱乐部"
                        android:textColor="@color/text_gray"
                        android:textSize="45px" />

                    <ImageView
                        android:id="@+id/account_left_arrow9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="60px"
                        android:src="@mipmap/left_arrow" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="60px"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="60px"
                        android:text="球龄"
                        android:textColor="@color/black"
                        android:textSize="45px" />

                    <TextView
                        android:id="@+id/account_ql"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@+id/account_left_arrow10"
                        android:text="6年"
                        android:textColor="@color/text_gray"
                        android:textSize="45px" />

                    <ImageView
                        android:id="@+id/account_left_arrow10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="60px"
                        android:src="@mipmap/left_arrow" />

                </RelativeLayout>

            </LinearLayout>
            <Button
                android:id="@+id/account_btn_login_out"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginTop="66px"
                android:layout_marginRight="60px"
                android:layout_marginLeft="60px"
                android:background="@drawable/shape_bg_button"
                android:text="退出登录"
                android:textColor="@color/white"
                android:textSize="@dimen/text_48"
                android:layout_marginBottom="40px"/>
        </LinearLayout>


    </ScrollView>

</LinearLayout>