<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:paddingBottom="10dip"
    >
    <TextView
        android:id="@+id/tv_head"
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:textColor="@android:color/darker_gray"
        android:layout_marginLeft="10dip"
        android:gravity="center_vertical"
        android:visibility="gone"
        />
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="140dip">
        <ImageView android:id="@+id/image" android:scaleType="fitXY" android:src="@mipmap/default_img"
                   android:layout_width="324px"
                   android:layout_height="324px" android:layout_margin="10dip"
        />

        <LinearLayout android:layout_marginTop="5dip" android:orientation="vertical"
                      android:layout_width="match_parent" android:layout_height="120dip">

            <LinearLayout android:layout_width="match_parent" android:layout_height="60dip">

                <TextView android:id="@+id/title" android:gravity="center_vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent" android:maxLines="2"
                          android:textStyle="bold" android:textSize="19dip" android:textColor="@color/black"
                          android:text="青训课程标题 青训课程标题 青训课程标题 "/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="60dip">
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                              android:layout_height="30dip">
                    <TextView android:id="@+id/date" android:text="2017-6-27" android:layout_width="wrap_content"
                              android:layout_height="match_parent" android:gravity="center_vertical"
                              android:textSize="12dip"
                              android:textColor="@android:color/darker_gray"/>
                    <TextView android:text=" | " android:layout_width="wrap_content"
                              android:layout_height="match_parent" android:gravity="center_vertical"
                              android:textSize="12dip"
                              android:textColor="@android:color/darker_gray"/>
                    <TextView android:id="@+id/address" android:text="上海虹口体育馆" android:layout_width="wrap_content"
                              android:layout_height="match_parent" android:gravity="center_vertical"
                              android:textSize="12dip"
                              android:textColor="@android:color/darker_gray"/>

                </LinearLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="30dip">
                    <TextView android:id="@+id/u16" android:background="@drawable/shape_bg_round_corner_green"
                              android:text="U16"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:gravity="center_vertical"
                              android:textColor="@color/theme_color" android:padding="2dip"
                              android:layout_centerVertical="true"/>
                    <TextView android:layout_alignParentRight="true" android:text="￥1999/年"
                              android:layout_width="wrap_content"
                              android:layout_height="match_parent" android:gravity="center_vertical"
                              android:id="@+id/price" android:textColor="@android:color/holo_red_dark"
                              android:layout_marginRight="10dip"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="0.8dip" android:background="@color/text_hint"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="40dip">
        <top.smartsport.www.widget.utils.RoundImageView android:id="@+id/coach_head" android:layout_marginLeft="10dip" android:layout_height="25dip" android:layout_width="25dip" android:layout_centerVertical="true"
            android:src="@mipmap/tuijian_touxiang6"
        />
        <TextView android:layout_width="wrap_content" android:layout_marginLeft="10dip" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_toRightOf="@+id/coach_head" android:id="@+id/coach_name"
            android:text="？？？"
            />
        <TextView android:layout_width="wrap_content" android:layout_marginRight="10dip" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentRight="true" android:id="@+id/woyaobaoming"
        android:background="@drawable/shape_bg_round_corner_green"  android:text="我要报名" android:textColor="@color/theme_color"
        android:paddingLeft="8dip" android:paddingRight="8dip" android:paddingTop="2dip" android:paddingBottom="2dip"/>
        <TextView  android:layout_width="wrap_content" android:layout_marginRight="10dip" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_toLeftOf="@+id/woyaobaoming" android:id="@+id/haishengjigeminge" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_tome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对我的评价"
            android:textStyle="bold"
            android:textColor="@color/font_main"
            android:textSize="19dip"
            android:layout_margin="10dip"
            />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="耐力"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginLeft="70dip"
                    android:layout_centerVertical="true"
                    />
                <LinearLayout
                    android:id="@+id/ll_nl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dip"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                </LinearLayout>
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爆发力"
                android:textColor="@android:color/darker_gray"
                android:layout_centerVertical="true"
                android:layout_marginLeft="70dip"
                />
            <LinearLayout
                android:id="@+id/ll_bfl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dip"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="技术"
                android:textColor="@android:color/darker_gray"
                android:layout_centerVertical="true"
                android:layout_marginLeft="70dip"
                />
            <LinearLayout
                android:id="@+id/ll_js"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dip"
                android:orientation="horizontal">
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合作"
                android:textColor="@android:color/darker_gray"
                android:layout_centerVertical="true"
                android:layout_marginLeft="70dip"
                />
            <LinearLayout
                android:id="@+id/ll_hz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dip"
                android:orientation="horizontal">
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="速度"
                android:textColor="@android:color/darker_gray"
                android:layout_centerVertical="true"
                android:layout_marginLeft="70dip"
                />
            <LinearLayout
                android:id="@+id/ll_sd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dip"
                android:orientation="horizontal">
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height">
            <top.smartsport.www.widget.utils.RoundImageView
                android:id="@+id/coach_head2"
                android:layout_marginLeft="10dip"
                android:layout_height="50dip"
                android:layout_width="50dip"
                android:layout_marginTop="10dip"
                android:layout_centerVertical="true"
                android:src="@mipmap/tuijian_touxiang6"
                />
            <TextView android:layout_width="wrap_content" android:layout_marginLeft="70dip" android:layout_height="wrap_content" android:layout_centerVertical="true" android:id="@+id/coach_name2" android:text="？？？"
                android:textColor="@android:color/darker_gray"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dip"
            android:layout_marginTop="10dip"
            android:layout_marginRight="25dip"
            android:textColor="@android:color/darker_gray"
            android:text="？？？"
            />
    </LinearLayout>
</LinearLayout>