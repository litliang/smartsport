<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/layout_banner"
                android:layout_width="match_parent"
                android:layout_height="550px"
                android:background="@color/white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:gravity="center_vertical"
                android:orientation="horizontal"

                android:layout_marginTop="38px"
                android:layout_marginBottom="35px">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="推荐课程"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:layout_marginLeft="50px"
                    android:textColor="@color/black"
                    android:textSize="55px"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"/>

                <TextView
                    android:id="@+id/fm_text_qbkc"
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="全部课程"
                    android:layout_marginRight="40px"
                    android:layout_weight="1"
                    android:textColor="@color/theme_color"
                    android:textSize="42px"
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"/>

            </LinearLayout>

            <top.smartsport.www.widget.HorizontalListView

                android:focusableInTouchMode="true"
                android:focusable="true"
                android:id="@+id/fm_grid_tjkc"
                android:layout_width="match_parent"
                android:layout_height="600px"
                android:listSelector="#00000000"
                android:layout_marginLeft="50px"
                android:layout_marginRight="40px"
                android:verticalSpacing="30px"
                android:horizontalSpacing="30px"
                />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="35px"
                android:layout_marginBottom="35px">
                <include layout="@layout/horizontal_line" />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="55px"
                android:layout_marginLeft="50px"
                android:layout_marginTop="15px"
                android:layout_marginBottom="40px"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="青训资讯"/>
            <top.smartsport.www.widget.MyListView
                android:id="@+id/fm_list_qxzx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35px"
                android:layout_marginBottom="35px">
                <include layout="@layout/horizontal_line" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"


                android:layout_height="100px"
                android:gravity="center_vertical"
                android:orientation="horizontal"

                android:layout_marginTop="38px"
                android:layout_marginBottom="35px">
                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="推荐教练"
                    android:layout_weight="1"
                    android:layout_marginLeft="50px"
                    android:textColor="@color/black"
                    android:textSize="55px"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"/>

                <TextView
                    android:id="@+id/fm_text_"
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="全部教练"
                    android:layout_marginRight="40px"
                    android:layout_weight="1"
                    android:textColor="@color/theme_color"
                    android:textSize="42px"
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"/>

            </LinearLayout>

            <top.smartsport.www.widget.HorizontalListView
                android:id="@+id/fm_grid_tjjl"
                android:layout_width="match_parent"
                android:layout_height="600px"
                android:listSelector="#00000000"
                android:layout_marginRight="40px"
                android:layout_marginLeft="50px"
                android:verticalSpacing="30px"
                android:horizontalSpacing="30px"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <top.smartsport.www.widget.MyListView
                    android:id="@+id/fm_list_top_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"/>

            </RelativeLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35px"
                >
                <include layout="@layout/horizontal_line" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="145px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="20px"
                android:background="@color/white"
                android:paddingBottom="30px">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="今日球星"
                    android:layout_weight="1"
                    android:layout_marginLeft="40px"
                    android:textColor="@color/black"
                    android:textSize="55px"
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"/>

                <TextView

                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="往期球星"
                    android:layout_marginRight="40px"
                    android:layout_weight="1"
                    android:textColor="@color/theme_color"
                    android:textSize="42px"
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"/>

            </LinearLayout>
            <include
                android:layout_marginBottom="30px"
                layout="@layout/layout_horizontal_scrollview"
                android:layout_width="match_parent"
                android:layout_height="520px" />

        </LinearLayout>


    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>


</LinearLayout>