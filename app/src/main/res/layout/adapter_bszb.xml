<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/adapter_bszb_img"
            android:layout_width="match_parent"
            android:layout_height="650px"
            android:src="@mipmap/aa_ting"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
            android:background="@mipmap/bq_zhibo"/>
        <TextView
            android:id="@+id/adapter_bszb_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来源：花椒"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:textSize="36px"
            android:paddingRight="30px"
            android:paddingLeft="30px"
            android:layout_gravity="right"
            android:layout_marginTop="20px"
            android:layout_marginRight="40px"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/bq_start"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_bszb_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="45px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="20px"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="比赛标题比赛标题比赛标题比赛标题比赛标题"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/adapter_bszb_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-05-20至2017-06-21"
                android:textSize="38px"
                android:textColor="@color/text_gray"
                android:layout_marginLeft="40px"
                android:layout_marginTop="10px"/>

            <TextView
                android:id="@+id/adapter_null"
                android:layout_toRightOf="@+id/adapter_bszb_date"
                android:layout_marginLeft="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_marginTop="5px"
                android:textColor="@color/text_gray"/>

            <TextView
                android:layout_toRightOf="@+id/adapter_null"
                android:id="@+id/adapter_bszb_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="38px"
                android:layout_marginLeft="20px"
                android:layout_marginTop="10px"
                android:text="上海体育馆上海体育馆上海体育馆上海体育馆上海体育馆"
                android:ellipsize="end"
                android:layout_marginRight="100px"
                android:singleLine="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_share"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40px"/>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>